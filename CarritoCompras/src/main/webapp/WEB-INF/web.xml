<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>UsuarioServlet</servlet-name>
  	<display-name>UsuarioServlet</display-name>
  	<description></description>
  	<servlet-class>smart.capacitacion.controller.UsuarioServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>CarritoComprasServlet</servlet-name>
  	<display-name>CarritoComprasServlet</display-name>
  	<description></description>
  	<servlet-class>smart.capacitacion.controller.CarritoComprasServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ProductoServlet</servlet-name>
  	<display-name>ProductoServlet</display-name>
  	<description></description>
  	<servlet-class>smart.capacitacion.controller.ProductoServlet</servlet-class>
  </servlet>
   <servlet>
  	<servlet-name>ComprasServlet</servlet-name>
  	<display-name>ComprasServlet</display-name>
  	<description></description>
  	<servlet-class>smart.capacitacion.controller.ComprasServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>UsuarioServlet</servlet-name>
  	<url-pattern>/UsuarioServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>CarritoComprasServlet</servlet-name>
  	<url-pattern>/CarritoComprasServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ProductoServlet</servlet-name>
  	<url-pattern>/ProductoServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ComprasServlet</servlet-name>
  	<url-pattern>/ComprasServlet</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
  	<welcome-file>views/login.jsp</welcome-file>
  </welcome-file-list>
</web-app>
